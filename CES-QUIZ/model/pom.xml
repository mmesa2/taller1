<dependencies>
    <!-- Spring Boot Starter Web para crear servicios REST -->
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- Spring Boot Starter Data JPA para interactuar con la base de datos -->
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-data-jpa</artifactId>
    </dependency>

    <!-- Dependencia de GSON para trabajar con JSON -->
    <dependency>
        <groupId>com.google.code.gson</groupId>
        <artifactId>gson</artifactId>
        <version>2.8.8</version> <!-- Asegúrate de especificar la versión más reciente -->
    </dependency>

    <dependency>
        <groupId>org.apache.tomcat</groupId>
        <artifactId>tomcat-catalina</artifactId>
        <version>10.0.14</version> <!-- Debes ajustar la versión según la que estés utilizando -->
        <scope>provided</scope> <!-- Indica que Tomcat estará disponible en tiempo de ejecución, pero no se empaquetará en el artefacto -->
    </dependency>

    <!-- Otras dependencias según sea necesario -->
</dependencies>
